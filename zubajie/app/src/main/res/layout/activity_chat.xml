<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chat_Activity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:padding="15dp"
            >
            <!--android:background="@color/light_blue"-->
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"

                />
            <!--android:src="@mipmap/jzw"-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="消息"/>
            <!--android:textColor="@color/white"-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="25sp"
                android:gravity="center"
                android:text="模拟聊天"
                />
            <!--android:textColor="@color/white"-->
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"

                />
            <!--android:src="@mipmap/login_icon01"-->
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_marginLeft="10dp"
                />
            <!--android:src="@mipmap/personal_normal"-->
        </LinearLayout>
        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:divider="#0000"></ListView>
        <!--android:background="@drawable/chat_background"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_margin="10dp"
            android:gravity="center">
            <!--android:background="@color/gray"-->
            <ImageView
                android:id="@+id/biaoqing"
                android:layout_width="30dp"
                android:layout_height="30dp"
                />
            <!--android:src="@mipmap/eol"-->
            <ImageView
                android:id="@+id/choose"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_marginLeft="10dp"/>
            <!--android:src="@mipmap/addcommodity"-->
            <EditText
                android:id="@+id/edittext"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"

                android:layout_marginLeft="10dp"/>
            <!--android:background="@color/white"-->
            <Button
                android:id="@+id/send"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="发送"

                android:layout_marginLeft="10dp"/>
            <!--android:background="@drawable/button"-->
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>